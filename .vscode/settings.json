{
  "files.associations": {
    "*.yaml_": "yaml",
    "*.json_": "json",
    "*.yml_": "yaml"
  },
  "editor.fontSize": 12,
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "files.autoSave": "onFocusChange",
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "keep",
    "diffEditor.ignoreTrimWhitespace": false
  }
}
